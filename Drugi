import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

mtcars = pd.read_csv('mtcars.csv')

mtcars.groupby(['cyl'])['mpg'].mean().plot.bar(y='mpg', title= "Zadatak2", stacked=True, xlabel='Broj cilindara',ylabel='Potro≈°nja',rot=0)
plt.show()

boxplot=mtcars.boxplot(by='cyl', column=['wt'],color='gray', boxprops=dict(color='blue'))
plt.show()
